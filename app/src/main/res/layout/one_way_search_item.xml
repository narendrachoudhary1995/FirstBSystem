<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/airways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@drawable/search_result_flight_background"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/first_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="8sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/airways_name"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/icon_flight"
                    android:layout_width="30sp"
                    android:layout_height="18sp" />

                <TextView
                    android:id="@+id/flight_name_one_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jet Airways"
                    android:textColor="@color/disable_color"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/depart_time_one_way"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:text="23:20"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/travel_time_one_way"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1.2"
                        android:gravity="center_horizontal"
                        android:text="2h 10m" />

                    <TextView
                        android:id="@+id/reach_time_one_way"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.9"
                        android:gravity="right"
                        android:text="23:20"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/disable_color"></LinearLayout>

                <TextView
                    android:id="@+id/stop_non_stop_one_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non Stop"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2sp"
                android:layout_weight=".5"
                android:gravity="center"
                android:src="@drawable/ic_black_plane_icon_1" />

            <TextView
                android:id="@+id/price_one_way"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="2"
                android:text="Rs 2,927"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>