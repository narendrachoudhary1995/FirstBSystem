<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.SendQuery">

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:layout_height="wrap_content">
     <include layout="@layout/toolbar_layout"></include>
     <LinearLayout
         android:layout_marginLeft="5sp"
         android:layout_marginRight="5sp"
         android:layout_marginTop="10sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:weightSum="5"
         >
         <TextView
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Select Enquiry Type"
             android:textColor="@color/white"
             />
         <Spinner
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:id="@+id/enquiryType"
             android:background="@drawable/ractangular_edit_text_background"
             android:theme="@style/ThemeOverlay.AppCompat.Light"
             android:layout_width="match_parent"
             android:entries="@array/enquiry_type"
             android:layout_height="wrap_content"></Spinner>
     </LinearLayout>
     <LinearLayout
         android:layout_marginLeft="5sp"
         android:layout_marginRight="5sp"
         android:layout_marginTop="10sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:weightSum="5"
         >
         <TextView
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:layout_width="wrap_content"
             android:layout_weight="1.8"
             android:layout_height="wrap_content"
             android:text="Sending To Admin:"
             android:textColor="@color/white"
             />
         <Spinner
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:background="@drawable/ractangular_edit_text_background"
             android:theme="@style/ThemeOverlay.AppCompat.Light"
             android:layout_width="match_parent"
             android:entries="@array/user_type"
             android:layout_height="wrap_content"
             android:id="@+id/adminOrUser"
             android:textColor="@color/black"
             android:textColorHint="@color/text_color"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_marginLeft="5sp"
         android:layout_marginRight="5sp"
         android:layout_marginTop="10sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:weightSum="5"
         >
         <TextView
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Subject:"
             android:textColor="@color/white"
             />
         <EditText
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:id="@+id/subject"
             android:background="@drawable/ractangular_edit_text_background"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="3.2"
             android:hint="@string/enter_subject"
             android:textColor="@color/black"
             android:textColorHint="@color/text_color"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_margin="5sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:weightSum="5"
         >
         <TextView
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:layout_width="wrap_content"
             android:layout_weight="1.8"
             android:layout_height="wrap_content"
             android:text="Leave a message:"
             android:textColor="@color/white"
             />
         <EditText
             android:layout_marginTop="5sp"
             android:layout_marginLeft="5sp"
             android:layout_marginRight="5sp"
             android:gravity="top"
             android:id="@+id/message_content"
             android:background="@drawable/ractangular_edit_text_background"
             android:layout_width="match_parent"
             android:layout_height="100sp"
             android:inputType="textMultiLine"
             android:layout_weight="3.2"
             android:textSize="13sp"
             android:textColor="@color/black"
             android:textColorHint="@color/text_color"
             />
     </LinearLayout>
     <Button
         android:layout_marginTop="10sp"
         android:layout_marginLeft="10sp"
         android:layout_marginRight="10sp"
         android:layout_width="match_parent"
         android:onClick="sendQuery"
         android:background="@color/white"
         android:layout_height="wrap_content"
         android:text="Send Message"
         />
 </LinearLayout>
</LinearLayout>